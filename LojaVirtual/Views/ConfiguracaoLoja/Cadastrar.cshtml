@model LojaVirtual.Models.ConfiguracaoLoja
@{
    ViewData["Title"] = "Configurar Loja";
}

<div class="container">

    <h1>Configurar Loja</h1>

    <form method="post">

        <div class="form-group">
            <label asp-for="CustoDespesa"></label>
            <input asp-for="CustoDespesa" class="form-control dinheiro" />
            <span asp-validation-for="PercentualLucro" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PercentualLucro"></label>
            <input asp-for="PercentualLucro" class="form-control dinheiro"/>
            <span asp-validation-for="PercentualLucro" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button> <a asp-action="Index" asp-controller="Home" class="btn btn-info">Voltar</a>

    </form>

</div>